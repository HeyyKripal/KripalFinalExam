  <form name="onlineStore" method="Post" onsubmit="return Submit();" action="">
    <div id="form">
      <label>Name :</label>
      <input id="name" type="text" name="name" ><br />

      <label>Student ID : </label>
      <input id="studentId" placeholder="1234567" type="text" name="studentId" ><br />

      <label>Web Components Books($72.99) :</label>
      <input id="web" placeholder="Please enter Number Only" type="text" name="web"><br />

      <label>Serverless Books($61.99) :</label>
      <input id="serverless" placeholder="Please enter Number Only" type="text" name="serverless"><br />

      <label>Retractable Pencils($6.99)  :</label>
      <input id="pencil" placeholder="Please enter Number Only" type="text" name="pencil"><br />

      <br /><br />

      <button type="submit">Submit</button>
      <p id="errors"></p>
    </div>
  </form>

  
  <h1 id="title">INVOICE</h1>
  <div class="formData">
    <% if(typeof(errors) !='undefined' )
    { for(var error of errors)
      { %>
      <p class="error">
        <%=error.msg %>
      </p>
      <% } } %>

        <% if(typeof(totalAmount) !='undefined' ){ %>
          <p id="formResult"></p>
          <h4>!!Thank you for your order!!</h4>
          <p>Here are your order details:</p>
          <table>
            <tr>
              <th>NAME : <br><br></th>
              <td>
                <%= name %> 
              </td>
            </tr>
            <tr>
                <th>Student ID :<br><br> </th>
                <td>
                  <%= studentId %>  
                </td>
              </tr>
            <tr>
              <th>Web Components Books($72.99) :<br><br> </th>
              <td>
                <%= webCharge.toFixed(2) %>
              </td>
            </tr>
            <tr>
              <th>Serverless Books($61.99) :<br><br> </th>
              <td>
                <%= serverlessCharge.toFixed(2) %>
              </td>
            </tr>
            <tr>
              <th>Retractable Pencils($6.99) :<br><br> </th>
              <td>
                <%= pencilCharge.toFixed(2) %>
              </td>
            </tr>
            <tr>
              <th>Sub Total :<br><br></th>
              <td>$<%= subTotal.toFixed(2) %>
              </td>
            </tr>
            <tr>
              <th>Tax :<br><br> </th>
              <td>$<%= taxAmount.toFixed(2) %>
              </td>
            </tr>
            <tr>
              <th>Total : <br><br></th>
              <td>$<%= totalAmount.toFixed(2) %>
              </td>
            </tr>
          </table>
          <% } %>
  </div>

